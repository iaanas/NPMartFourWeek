<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/menuBackColor"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_one"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radio_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radio_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radio_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_five"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radio_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radio_seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radio_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:checked="true" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkBox"
            android:checked="true"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="запомнить ресторан как основной" />

        <RadioGroup
            android:id="@+id/radioGroup_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/menuBackColor"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_2_one"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radio_2_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radio_3_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/radio_4_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_5_five"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_weight="1" />

        </RadioGroup>


    </LinearLayout>

</RelativeLayout>